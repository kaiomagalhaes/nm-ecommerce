<% @taxons = @taxon && @taxon.parent ? @taxon.parent.children : Spree::Taxon.roots %>
<%= form_tag spree.products_path, method: :get, class: 'form-inline' do %>
  <div class="form-group">
    <% cache [I18n.locale, @taxons] do %>
      <%= select_tag :taxon,
            options_for_select([[Spree.t(:all_departments), '']] +
                                  @taxons.map {|t| [t.name, t.id]},
                                  @taxon ? @taxon.id : params[:taxon]), 'aria-label' => 'Taxon', class: 'form-control' %>
    <% end %>
    <div class="input-group">
      <%= search_field_tag :keywords, params[:keywords], placeholder: Spree.t(:search), class: 'form-control' %>
      <div class="input-group-addon">
        <%= button_tag(type: "submit", id:"search") do %>
          <%= Spree.t(:search) %> <i class="fa fa-search"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
